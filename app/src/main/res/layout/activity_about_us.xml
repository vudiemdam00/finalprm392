<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="16dp">

        <!-- Liên hệ qua -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Liên hệ qua"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:padding="10dp"
            android:background="#607D8B" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/imgYoutube"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/youtube_icon"
                android:contentDescription="Youtube" />
        </LinearLayout>

        <!-- Inbox qua -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inbox qua"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:padding="10dp"
            android:background="#607D8B"
            android:layout_marginTop="24dp" />

        <!-- Email -->
        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tuanlvhe176257@fpt.edu.vn\n\n nhatvnhe171071@fpt.edu.vn\n\n vunhhe181069@fpt.edu.vn \n\n khiemdghe161336@fpt.edu.vn"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:textColor="#003B55"
            android:gravity="center"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:background="#E3F2FD"
            android:elevation="2dp" />

        <!-- Rate us section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F44336"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:clipToPadding="false"
            android:elevation="4dp"
            android:backgroundTintMode="src_in"
            android:backgroundTint="#D32F2F">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pls rate us"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/star_rate_icon"
                    android:layout_margin="4dp" />
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/star_rate_icon"
                    android:layout_margin="4dp" />
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/star_rate_icon"
                    android:layout_margin="4dp" />
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/star_rate_icon"
                    android:layout_margin="4dp" />
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/star_rate_icon"
                    android:layout_margin="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Một số lời nhắn -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Một số lời nhắn"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:padding="10dp"
            android:background="#607D8B" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Cảm ơn bạn đã sử dụng ứng dụng này để học tập hiệu quả hơn!\n\n - Đừng quên ôn tập mỗi ngày nhé! \n\n - Đừng ngại liên hệ để góp ý và giúp ứng dụng tốt hơn!"
            android:textSize="18sp"
            android:textColor="#212121"
            android:padding="16dp"
            android:background="#C8E6C9"
            android:layout_marginTop="8dp"
            android:elevation="2dp"
            android:lineSpacingExtra="4dp"
            android:letterSpacing="0.05" />
    </LinearLayout>
</ScrollView>
